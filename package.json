{
  "name": "@uit-go/monorepo",
  "version": "0.1.0",
  "description": "UIT-Go microservices monorepo",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "echo 'Development mode - services start individually'",
    "build": "pnpm --recursive --filter './services/**' run build && pnpm --recursive --filter './packages/**' run build",
    "test": "pnpm --recursive run test",
    "test:watch": "pnpm --recursive run test:watch",
    "test:cov": "pnpm --recursive run test:cov",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "pnpm --recursive run prisma:generate",
    "migrate:dev": "pnpm --recursive run migrate:dev",
    "migrate:deploy": "pnpm --recursive run migrate:deploy"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@nestjs/microservices": "^11.1.7"
  }
}
